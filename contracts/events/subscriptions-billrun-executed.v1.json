{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://7dsolutions.io/schemas/events/subscriptions-billrun-executed.v1.json",
  "title": "subscriptions.billrun.executed",
  "description": "Event emitted when a billing cycle (bill run) is executed",
  "type": "object",
  "required": [
    "event_id",
    "occurred_at",
    "tenant_id",
    "source_module",
    "source_version",
    "payload"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier (idempotency key)"
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when event was generated"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier for multi-tenant isolation"
    },
    "source_module": {
      "type": "string",
      "const": "subscriptions",
      "description": "Module that generated the event"
    },
    "source_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the source module"
    },
    "correlation_id": {
      "type": "string",
      "description": "Links related events in a business transaction"
    },
    "causation_id": {
      "type": "string",
      "description": "Links this event to the command/event that caused it"
    },
    "payload": {
      "type": "object",
      "required": [
        "bill_run_id",
        "execution_date",
        "subscriptions_processed",
        "invoices_created",
        "failures",
        "execution_time"
      ],
      "properties": {
        "bill_run_id": {
          "type": "string",
          "description": "Unique bill run identifier (idempotency key)"
        },
        "execution_date": {
          "type": "string",
          "format": "date",
          "description": "Date for which the bill run was executed"
        },
        "subscriptions_processed": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of subscriptions processed"
        },
        "invoices_created": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of invoices successfully created in AR"
        },
        "failures": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of failed invoice creation attempts"
        },
        "execution_time": {
          "type": "string",
          "format": "date-time",
          "description": "When the bill run completed"
        },
        "subscription_ids": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of subscription IDs processed in this bill run"
        },
        "failed_subscription_ids": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of subscription IDs that failed during processing"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
